generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement()) 
  name String
  email String @unique // O parâmetro unique permite que não há um dado com o mesmo valor nessa coluna
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Movies {
  id Int @id @default(autoincrement())
  name String @unique
  gender String @db.VarChar(255)
  sinopse String
  year String

  @@map("movies")
}